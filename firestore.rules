rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /devices/{deviceId} {
      allow read: if true;

      allow update: if request.auth != null
        && request.resource.data.diff(resource.data).changedKeys().hasOnly(["imei"])
        && resource.data.status == "received";
    }

    match /orders/{orderId} {
      allow read: if true;

      allow update: if request.auth != null
        && request.resource.data.diff(resource.data).changedKeys().hasOnly(["imei"])
        && resource.data.status == "received";
    }

    match /chats/{document=**} {
      allow read, write: if true;
    }

    match /device_clicks/{document=**} {
      allow write: if true;
    }

    match /{document=**} {
      allow read: if true;
    }

    match /{collection}/{document} {
      allow write: if request.auth != null && collection != "devices" && collection != "orders";
    }

    match /{collection}/{document}/{subcollection=**} {
      allow write: if request.auth != null && collection != "devices" && collection != "orders";
    }
  }
}
