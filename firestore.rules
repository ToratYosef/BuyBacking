rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Anyone can read all documents.
    match /{document=**} {
      allow read: if true;
      // Only signed-in users can write to all other collections.
      allow write: if request.auth != null;
    }

    // New, corrected rule for the 'chats' collection and all its subcollections.
    // This allows both signed-in and guest users to read and write chat messages.
    match /chats/{document=**} {
      allow read, write: if true;
    }
  }
}