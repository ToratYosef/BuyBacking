rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (request.auth.token.admin == true ||
        request.auth.token.email in split(env.get("ADMIN_ALLOWED_EMAILS"), ","));
    }

    match /orders/{orderId} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.userId);
      allow write: if false;
    }

    match /users/{userId} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      allow write: if request.auth.uid == userId;

      match /orders/{orderId} {
        allow read: if request.auth.uid == userId || isAdmin();
        allow write: if request.auth.uid == userId;
      }
    }

    match /adminAuditLogs/{logId} {
      allow read, write: if isAdmin();
    }

    match /devices/{deviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /referrals/{referralId} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    match /shippingKits/{kitId} {
      allow read, write: if isAdmin();
    }

    match /{document=**} {
      allow read: if isAdmin();
    }
  }
}
